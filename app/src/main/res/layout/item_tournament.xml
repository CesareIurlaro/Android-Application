<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="4dp"
        android:elevation="2dp"
        app:cardCornerRadius="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightorangedark"
            android:padding="16dp">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/tournament_game_icon"
                android:layout_height="120dp"
                android:layout_width="100dp"
                android:scaleType="centerCrop"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/backgrounds/scenic"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tournament_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/tournament_game_icon"
                app:layout_constraintRight_toRightOf="parent"
                android:text="TORNEO"
                android:textColor="@color/black"
                android:textSize="20sp"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/players_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/tournament_name_tv"
                app:layout_constraintLeft_toRightOf="@+id/tournament_game_icon"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="Numero giocatori"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:visibility="gone"/>


        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tournament_description_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/tournament_game_icon"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="DESCRIZIONE"
                android:textColor="@color/black"
                android:textSize="20sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>