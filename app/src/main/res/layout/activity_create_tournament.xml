<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:elevation="2dp"
        app:cardCornerRadius="5dp"
        android:orientation="vertical">

    <androidx.cardview.widget.CardView
            android:id="@+id/activity_card_view"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightorangedark">

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/activity_item_title_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textColor="@color/black"
                    android:hint="@string/dialog_tournament_title"
                    android:textSize="30sp"
                    android:theme="@style/AppTheme.LoginEditTextTheme"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/activity_tournament_players_textview"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dialog_players_number"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    app:layout_constraintTop_toBottomOf="@id/activity_item_title_textview"
                    app:layout_constraintLeft_toLeftOf="parent"/>

            <Spinner
                    android:id="@+id/activity_players_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawSelectorOnTop="true"
                    android:entries="@array/spinner_content_tournament_creation"
                    app:layout_constraintTop_toTopOf="@+id/activity_tournament_players_textview"
                    app:layout_constraintBottom_toTopOf="@+id/activity_tournament_games_textview"
                    app:layout_constraintStart_toStartOf="@+id/games_selection_etv"
                    app:layout_constraintEnd_toEndOf="parent"/>


            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/activity_tournament_games_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dialog_games"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    app:layout_constraintLeft_toLeftOf="@id/activity_tournament_players_textview"
                    app:layout_constraintTop_toBottomOf="@id/activity_tournament_players_textview"
                    app:layout_constraintStart_toStartOf="@+id/activity_tournament_players_textview"/>

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/selected_game_image"
                    app:layout_constraintTop_toTopOf="@id/activity_tournament_games_textview"
                    app:layout_constraintBottom_toBottomOf="@id/activity_tournament_games_textview"
                    app:layout_constraintLeft_toRightOf="@id/activity_tournament_games_textview"
                    android:layout_width="30dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_height="0dp"
                    tools:src="@drawable/wow"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@id/activity_tournament_games_textview"
                    app:layout_constraintTop_toTopOf="@id/activity_tournament_games_textview"
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/games_selection_etv"
                    app:layout_constraintLeft_toRightOf="@id/selected_game_image"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/activity_tournament_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintTop_toBottomOf="@+id/activity_card_view"
            app:layout_constraintBottom_toTopOf="@+id/activity_create_tournament_button"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:listitem="@layout/item_create_tournament"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/activity_create_tournament_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="@string/dialog_tournament_create"
            android:textColor="#FFF"
            android:layout_marginBottom="4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
