<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:background="@drawable/hearthstone"
                                                   android:layout_height="match_parent"
                                                   tools:context="com.example.myapplication.ui.MainActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_fragment_user"
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="25sp"
                tools:text="User"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

    </androidx.appcompat.widget.Toolbar>


    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/user_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_fragment_user"
            android:layout_marginTop="100dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:src="@drawable/doggo"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/user_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            tools:text="@string/nickname"
            android:textColor="#fff"
            android:textSize="21sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/user_image"
            app:layout_constraintLeft_toLeftOf="@id/user_image"
            app:layout_constraintRight_toRightOf="@id/user_image"/>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_logout"
            style="@style/Theme.Design.Light"
            android:layout_width="150dp"
            android:layout_height="56dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_styles"
            android:text="@string/logout"
            app:layout_constraintTop_toBottomOf="@id/user_nickname"
            app:layout_constraintLeft_toLeftOf="@id/user_nickname"
            app:layout_constraintRight_toRightOf="@id/user_nickname"
            app:srcCompat="@drawable/ic_menu_send"/>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/user_creating_tournament_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            tools:text="@string/create_tournament"
            android:background="@drawable/button_styles"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>