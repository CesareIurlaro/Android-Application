<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context="com.example.myapplication.ui.MainActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_fragments"
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:text="@string/user_string"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

    </androidx.appcompat.widget.Toolbar>


    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/history_user_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_fragments"
            android:layout_marginTop="100dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/doggo"/>


    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/update_user_image_pencil"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_edit_black_24dp"
            android:layout_marginStart="5dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/history_user_image"
            app:layout_constraintBottom_toBottomOf="@+id/history_user_image"/>

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/update_user_is_subscribed"
            android:layout_width="50dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_sms_failed_black_24dp"

            app:layout_constraintBottom_toTopOf="@+id/history_user_image"
            app:layout_constraintEnd_toEndOf="@+id/history_user_image"/>
    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/update_user_is_verified"
            android:layout_width="50dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_contact_mail_black_24dp"
            app:layout_constraintBottom_toTopOf="@+id/history_user_image"
            app:layout_constraintStart_toStartOf="@+id/history_user_image"/>
    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/update_user_nickanme_pencil"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/ic_edit_black_24dp"
            app:layout_constraintBottom_toBottomOf="@+id/user_nickname"
            app:layout_constraintStart_toStartOf="@+id/update_user_image_pencil"
            app:layout_constraintTop_toTopOf="@+id/user_nickname"/>
    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/update_user_email_pencil"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/ic_edit_black_24dp"
            app:layout_constraintBottom_toBottomOf="@+id/user_mail"
            app:layout_constraintStart_toStartOf="@+id/update_user_nickanme_pencil"
            app:layout_constraintTop_toTopOf="@+id/user_mail"/>

    <androidx.appcompat.widget.AppCompatEditTextView
            android:id="@+id/user_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:inputType="none"
            android:textColor="@color/black"
            android:textSize="21sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/history_user_image"
            app:layout_constraintLeft_toLeftOf="@id/history_user_image"
            app:layout_constraintRight_toRightOf="@id/history_user_image"
            tools:text="@string/nickname"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/user_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            tools:text="@string/mail"
            android:textColor="@color/black"
            android:textSize="21sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/user_nickname"
            app:layout_constraintStart_toStartOf="@+id/user_nickname"
            app:layout_constraintEnd_toEndOf="@+id/user_nickname"/>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_history"
            android:layout_marginTop="10dp"
            android:layout_width="150dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_styles"
            android:text="@string/history"
            app:layout_constraintEnd_toEndOf="@+id/user_mail"
            app:layout_constraintStart_toStartOf="@+id/user_mail"
            app:layout_constraintTop_toBottomOf="@id/user_mail"
            style="@style/Theme.Design.Light"
    />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_logout"
            style="@style/Theme.Design.Light"
            android:layout_width="150dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_styles"
            android:text="@string/logout"
            app:layout_constraintStart_toStartOf="@+id/button_history"
            app:layout_constraintEnd_toEndOf="@+id/button_history"
            app:layout_constraintTop_toBottomOf="@+id/button_history"
            app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>