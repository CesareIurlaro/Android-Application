<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/hearthstone"
        tools:context="com.example.myapplication.ui.MainActivity">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/history_user_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="45dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/doggo"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/user_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/nickname"
            android:textColor="#fff"
            android:textSize="21sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/history_user_image"
            app:layout_constraintLeft_toLeftOf="@id/history_user_image"
            app:layout_constraintRight_toRightOf="@id/history_user_image"/>

</androidx.constraintlayout.widget.ConstraintLayout>
